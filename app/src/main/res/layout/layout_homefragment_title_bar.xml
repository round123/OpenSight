<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab"
    android:layout_width="fill_parent"
    android:layout_height="46.0dip"
    android:layout_alignParentBottom="true"
    android:visibility="visible">

    <ImageView
        android:id="@+id/iv_tab_logo"
        android:layout_width="77.0dip"
        android:layout_height="16.0dip"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15.0dip"
        android:layout_marginTop="17.0dip"
        android:layout_marginBottom="14.0dip"
        android:src="@mipmap/logo_eyepeziter_black" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="9.0dip"
        android:layout_toEndOf="@id/iv_tab_logo"
        app:tabBackground="@color/transparent"
        app:tabIndicator="@null"
        app:tabIndicatorFullWidth="false"
        app:tabPaddingEnd="5.0dip"
        app:tabPaddingStart="5.0dip"
        app:tabRippleColor="@color/transparent" />

    <LinearLayout
        android:id="@+id/v_right_tabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_tab_right"
            android:layout_width="46.0dip"
            android:layout_height="46.0dip"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:src="@mipmap/icon_notification"/>
    </LinearLayout>
</RelativeLayout>